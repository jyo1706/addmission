<%- include('../header.ejs') %>

<div class="container" style="margin-top:125px">
    <h2 class="bg-primary text-center">Update Form</h2>
<form action="/update/<%= d._id %>" method="post" > 
    <div class="mb-3">
      <label>Name:</label>
       <input type="text" name="name" value="<%= d.name%>" class="form-control">
   </div>
   <div class="mb-3">
       <label>Email:</label>
        <input type="text" name="email" value="<%= d.email%>" class="form-control">
    </div>
    <div class="mb-3">
       <label>Mobile Number:</label>
        <input type="number" name="number" value="<%= d.number%>" class="form-control">
    </div>
    <div class="mb-3">
       <label>Address:</label>
        <input type="text-area" name="address" value="<%= d.address%>" class="form-control">
    </div>
    <div class="mb-3">
       <label>Gender:</label>
       <div class="form-check">
           <input class="form-check-input" type="radio" name="gender" value="male" <%= d.gender=='male' ? 'checked':''%>>
           <label class="form-check-label">
             Male
           </label>
         </div>
         <div class="form-check">
           <input class="form-check-input" type="radio" name="gender"  value="female" <%= d.gender=='female' ? 'checked':''%>>
           <label class="form-check-label">
          Female
           </label>
         </div>
    </div>
    
    
    <div class="mb-3">
       <label>Qualification:</label>
       <select class="form-select" name="qualification"  aria-label="Default select example">
           <option selected> select</option>
           <option value="12" <%= d.qualification='12' ?'selected':''%>>+12</option>
           <option value="diploma" <%= d.qualification='diploma' ?'selected':''%>>diploma</option>
           <option value="bca" <%= d.qualification='bca' ?'selected':''%>>bca</option>
           <option value="b.tech" <%= d.qualification='b.tech' ?'selected':''%>>b.tech</option>
         </select>
    </div>
    <div class="mb-3">
       <label>Course:</label>
       <input type="text" name="course" value="bca" class="form-control" readonly>
           
           
         </select>
    </div>
    <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Submit</button>
</form>
</div>
<%- include('../footer.ejs') %>
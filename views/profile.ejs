<%- include('./header.ejs')%>

    <div class="container py-5 w-100 h-100">
      <div class="row d-flex  h-100">
        <div class="col-6">
          <div class="" style="border-radius: 15px;">
            <div class="p-4">
              <div class="d-flex text-black">
                <div class="flex-shrink-0">
                  <img src="<%= img%>"
                    alt="Generic placeholder image" class="img-fluid"
                    style="width: 80%; height:100%; border-radius: 10px;">
                </div>
                </div>
                 <div class="col-6">
                    <div class="row">
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-1"><%= n %></h3>
                            <h5 class="mb-1"><%= email %></h5>
                            </div>
                            <div class="d-flex">
                              <a href="<%= id%>" data-bs-target="#changeProfile" data-bs-toggle="modal" class="btn me-1" style="background-color: #af0c0c; color:white">Profile change</a>
                              <a href="<%= id%>" data-bs-target="#changePassword" data-bs-toggle="modal" class="btn " style="background-color: #af0c0c; color:white">Password Change</a>
                            </div>
                    </div>
                 </div>
                
                </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  

   <!-- profile change  -->

  <div class="modal" tabindex="-1" id="changeProfile">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Profile Chnage</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <% if(message.length > 0){ %>
            <div class="alert alert-success">
            <%= message %>
            </div>
            <% } %>
            <form action="/updateprofile/<%= id%>" method="post" enctype="multipart/form-data"> 
                <div class="mb-3">
                  <label>Name:</label>
                   <input type="text" name="name" value="<%= n %>" class="form-control">
               </div>
               <div class="mb-3">
                   <label>Email:</label>
                    <input type="text" name="email" value="<%= email %>"   class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label>Profile Pic :</label>
                   
                    <input type="file" name="profile_image"   class="form-control">
                    <img src="<%= img%>" width="80">
                 </div>
                 <div class="modal-footer">
          
          
                  <button type="submit" class="btn " style="background-color: #af0c0c; color:white" data-bs-dismiss="modal">Submit</button>
                </div>
                 </form>
        </div>
        
      </div>
    </div>
  </div>

  <!-- change Password -->

  <div class="modal" tabindex="-1" id="changePassword">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title text-center" style="background-color: #af0c0c; color:white">Profile Change</h5>
          <button type="button" style="background-color: #af0c0c; color:white" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/changepassword/<%= id %>" method="post" enctype="multipart/form-data"> 
                <div class="mb-3">
                  <label>Name:</label>
                   <input type="text" name="name" value="<%= n %>" class="form-control">
               </div>
               <div class="mb-3">
                   <label>Email:</label>
                    <input type="text" name="email" value="<%= email %>"   class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label>Old Password  :</label>
                   
                    <input type="text" name="old_password" value=""   class="form-control" >
                 </div>
                 <div class="mb-3">
                  <label>New Password  :</label>
                 
                  <input type="text" name="new_password" value=""   class="form-control" >
               </div>
               <div class="mb-3">
                <label>Confirm Password  :</label>
               
                <input type="text" name="confirm_password" value=""   class="form-control">
             </div>
                 
                 
        </div>
        <div class="modal-footer">
          
          <button type="submit" href="" class="btn" style="background-color: #af0c0c; color:white">Save changes</button>
        </div>
      </form>
      </div>
    </div>
  </div>

<%- include('./footer.ejs')%>